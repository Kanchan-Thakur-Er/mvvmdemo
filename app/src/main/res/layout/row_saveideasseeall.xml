<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/_150sdp"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/_5sdp"
    android:layout_marginBottom="@dimen/_5sdp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imgSavedIdea"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_180sdp"
            android:layout_marginLeft="@dimen/_20sdp"
            android:scaleType="fitXY"
            android:src="@drawable/saved_idea_img" />

        <ImageView
            android:id="@+id/imgStar"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:adjustViewBounds="true"
            android:src="@drawable/gray_star" />
    </RelativeLayout>

    <TextView
        android:id="@+id/txtBusinessName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_22sdp"
        android:text="Name of Business"
        android:textColor="@color/colorText"
        android:textSize="@dimen/_15ssp" />

    <TextView
        android:id="@+id/txtBusinessType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_22sdp"
        android:text="Type of Business"
        android:textColor="@color/colorText"
        android:textSize="@dimen/_12ssp" />
</LinearLayout>