<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/blur_imgsavedideas"
    >
    <LinearLayout
        android:layout_width="@dimen/_180sdp"
        android:layout_height="@dimen/_210sdp"
        android:orientation="vertical"

        >
        <LinearLayout
            android:id="@+id/lnrMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
        <TextView
            android:id="@+id/tvCancel"
            android:layout_width="@dimen/_30ssp"
            android:layout_height="@dimen/_30ssp"
            android:layout_gravity="end"
            android:gravity="center"
            android:padding="@dimen/_7sdp"
            android:text="X"
            android:textColor="@color/colorBlack" />

        <ImageView
            android:layout_gravity="center_horizontal"
            android:id="@+id/imgMessage"
            android:padding="@dimen/_7sdp"
            android:layout_centerInParent="true"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:adjustViewBounds="true"
            android:src="@drawable/message" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"

            android:fontFamily="@font/exo_2_light"
            android:text="Message"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/_20sdp" />
        </LinearLayout>
        <View
            android:layout_marginTop="@dimen/_7sdp"
            android:layout_height="@dimen/size1_"
            android:layout_width="match_parent"
            android:background="@color/colorBlack"
            />
        <LinearLayout
            android:id="@+id/lnrEntry"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
        <ImageView
            android:layout_gravity="center_horizontal"

            android:padding="@dimen/_7sdp"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:src="@drawable/entrydetail" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/exo_2_light"
            android:text="Entry Detail"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/_20sdp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>